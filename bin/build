#!/usr/bin/env bash
CURRENT_DIR=$(pwd)
SCRIPT_DIR=$(dirname $BASH_SOURCE)
CHECKOUT_DIR=$CURRENT_DIR/$SCRIPT_DIR/../

# Update Box
$CHECKOUT_DIR/bin/box update

# Make the build leaner
composer install --no-dev

# Build Phar
$CHECKOUT_DIR/bin/box build -c $CHECKOUT_DIR/box.json -vvv

# Create Version
sha1sum $CHECKOUT_DIR/build/iedtools.phar > $CHECKOUT_DIR/build/iedtools.phar.version
